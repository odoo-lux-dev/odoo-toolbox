    "lint": "biome lint .",
    "format": "biome format . --write"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@preact/preset-vite": "^2.10.1",
    "@wxt-dev/auto-icons": "^1.0.2",
    "sass": "^1.89.0",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  },
  "dependencies": {
    "history": "^5.3.0",
    "preact": "^10.26.6",
    "preact-router": "^4.1.2",
    "swapy": "^1.0.5"
  }
}
